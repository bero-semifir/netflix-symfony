{% extends 'base.html.twig' %}

{% block title %}Film
{% endblock %}

{% block body %}
	<h1>Film</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ film.id }}</td>
			</tr>
			<tr>
				<th>Titre</th>
				<td>{{ film.titre }}</td>
			</tr>
			<tr>
				<th>Date_sortie</th>
				<td>{{ film.dateSortie ? film.dateSortie|date('Y-m-d') : '' }}</td>
			</tr>
			<tr>
				<th>Producteur</th>
				<td>{{ film.producteur }}</td>
			</tr>
			<tr>
				<th>Description</th>
				<td>{{ film.description }}</td>
			</tr>
			{% if film.univers | length > 0 %}
				<tr>
					<th>Univers</th>
					<td>
						{% for univer in film.univers %}
							<a href={{ url('app_univers_show', { id: univer.id } ) }}>{{ univer }}</a>,
						{% endfor %}
					</td>
				</tr>
			{% endif %}
		</tbody>
	</table>

	<a href="{{ path('app_film_index') }}">back to list</a>

	<a href="{{ path('app_film_edit', {'id': film.id}) }}">edit</a>

	{{ include('film/_delete_form.html.twig') }}
{% endblock %}

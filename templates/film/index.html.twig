{% extends 'base.html.twig' %}

{% block title %}Film index
{% endblock %}

{% block body %}
	<h1>Film index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Titre</th>
				<th>Date_sortie</th>
				<th>Producteur</th>
				<th>Description</th>
				<th>Univers</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for film in films %}
				<tr>
					<td>{{ film.id }}</td>
					<td>{{ film.titre }}</td>
					<td>{{ film.dateSortie ? film.dateSortie|date('Y-m-d') : '' }}</td>
					<td>{{ film.producteur }}</td>
					<td>{{ film.description }}</td>
					<td>
						{% for univer in film.Univers %}
							<a href={{url('app_univers_show', { id: univer.id } )}}>{{ univer }}</a>,
						{% endfor %}
					</td>
					<td>
						<a href="{{ path('app_film_show', {'id': film.id}) }}">show</a>
						<a href="{{ path('app_film_edit', {'id': film.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="6">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('app_film_new') }}">Create new</a>
{% endblock %}
